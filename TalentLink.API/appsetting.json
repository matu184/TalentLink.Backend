{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=talentlink.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "TalentLinkAPI",
    "Audience": "TalentLinkClient",
    "ExpiresInMinutes": 60
  },
  "Stripe": {
    "SecretKey": "${STRIPE_SECRET_KEY}",
    "PublishableKey": "${STRIPE_PUBLISHABLE_KEY}",
    "WebhookSecret": "${STRIPE_WEBHOOK_SECRET}"
  },
  "OpenCage": {
    "APIKEY": "${OPENCAGE_APIKEY}"
  }
}